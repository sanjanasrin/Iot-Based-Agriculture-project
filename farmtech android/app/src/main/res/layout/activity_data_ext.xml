<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data_ext"
    android:orientation="vertical"
    android:background="@drawable/data_ext">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:fontFamily="@font/hobostd"
                android:text="TextView"
                android:textSize="40dp" />


            <WebView
                android:id="@+id/web"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                />




            <TextView
                android:id="@+id/sname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scientific Name:"
                android:fontFamily="@font/hobostd"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/s_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-25dp"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="Suitable Soil:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="TextView"
                android:textSize="20dp"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="-25dp"
                />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="Suitable Temperature:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="TextView"
                android:textSize="20dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-24dp"
                />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Flower:"
                android:fontFamily="@font/hobostd"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/hobostd"
                android:textSize="20dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-24dp"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="Type of Pollination:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/pollination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:fontFamily="@font/hobostd"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-24dp"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="Agent of Pollination:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="TextView"
                android:textSize="20dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-24dp"
                />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hobostd"
                android:text="Duration:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="TextView"
                android:textSize="20dp"
                android:fontFamily="@font/hobostd"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-24dp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>